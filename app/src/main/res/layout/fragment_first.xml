<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FirstFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="first"
        app:layout_constraintBottom_toTopOf="@id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="second"
        app:layout_constraintBottom_toTopOf="@id/textview_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_first" />

    <ImageView
        android:id="@+id/image_first"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_wifi_enter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        app:layout_constraintStart_toStartOf="parent"
        >


        <ImageView
            android:id="@+id/enter_wifi_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/doll_enter_wifi_safe"
            app:layout_constraintEnd_toStartOf="@+id/enter_wifi_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="安全检测"
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/enter_wifi_safe"
            app:layout_constraintStart_toStartOf="@+id/enter_wifi_safe"
            app:layout_constraintTop_toBottomOf="@+id/enter_wifi_safe" />

        <ImageView
            android:id="@+id/enter_wifi_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/doll_enter_wifi_check"
            app:layout_constraintStart_toEndOf="@+id/enter_wifi_safe"
            app:layout_constraintEnd_toStartOf="@+id/enter_wifi_boost"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="网络测速"
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/enter_wifi_check"
            app:layout_constraintStart_toStartOf="@+id/enter_wifi_check"
            app:layout_constraintTop_toBottomOf="@+id/enter_wifi_check" />


        <ImageView
            android:id="@+id/enter_wifi_boost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/doll_enter_wifi_boost"
            app:layout_constraintStart_toEndOf="@id/enter_wifi_check"
            app:layout_constraintEnd_toStartOf="@+id/enter_wifi_force"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="优化加速"
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/enter_wifi_boost"
            app:layout_constraintStart_toStartOf="@+id/enter_wifi_boost"
            app:layout_constraintTop_toBottomOf="@+id/enter_wifi_boost" />


        <ImageView
            android:id="@+id/enter_wifi_force"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/doll_enter_wifi_force"
            app:layout_constraintStart_toEndOf="@id/enter_wifi_boost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="信号增强"
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/enter_wifi_force"
            app:layout_constraintStart_toStartOf="@+id/enter_wifi_force"
            app:layout_constraintTop_toBottomOf="@+id/enter_wifi_force" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>