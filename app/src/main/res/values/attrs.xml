<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText" format="string" />
    <attr name="titleTextColor" format="color" />
    <attr name="titleTextSize" format="dimension" />

    <declare-styleable name="RoundTextView">
        <attr name="stroke_color" format="reference|color"/>
        <attr name="fill_color" format="reference|color"/>
        <attr name="has_stroke" format="boolean"/>
        <attr name="has_press" format="boolean"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="press_alpha" format="float"/>
        <attr name="normal_alpha" format="float"/>
        <attr name="radius" format="dimension"/>
        <attr name="start_color" format="reference|color"/>
        <attr name="end_color" format="reference|color"/>
        <attr name="linear_type" format="enum">
            <enum name="none" value="0"/>
            <enum name="leftToRight" value="1"/>
            <enum name="topToBottom" value="2"/>
        </attr>
    </declare-styleable>

</resources>
